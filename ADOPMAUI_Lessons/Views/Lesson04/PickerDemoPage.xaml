<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ADOPMAUI_Lessons.Models"
             x:Class="ADOPMAUI_Lessons.Views.Lesson04.PickerDemoPage"
             Title="Picker Demo">
    <StackLayout>
        <Label Text="Example of Pickers"
               FontSize="50"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <DatePicker x:Name="picDate" Format="D"
                    VerticalOptions="CenterAndExpand"
                    Margin="10, 0" DateSelected="picDate_DateSelected"/>

        <TimePicker x:Name="picTime" Format="T"
                    VerticalOptions="CenterAndExpand"
                    Margin="10, 0" PropertyChanged="picTime_PropertyChanged"/>

        <Picker x:Name="picColor" Title="Color"
                VerticalOptions="CenterAndExpand"
                Margin="10, 0" SelectedIndexChanged="picColor_SelectedIndexChanged">
        </Picker>
    </StackLayout>
</ContentPage>
